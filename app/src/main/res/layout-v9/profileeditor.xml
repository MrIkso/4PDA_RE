<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="24.0dip"
    android:paddingTop="16.0dip"
    android:paddingRight="24.0dip"
    android:paddingBottom="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <view
        android:id="@id/prf_edt_ava"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginLeft="0.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_marginBottom="0.0dip"
        android:src="@drawable/ic_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="ru.fourpda.client.Widgets$AvatarView" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/button_flat_text"
        android:gravity="center"
        android:id="@id/prf_edt_ava_change"
        android:background="@drawable/button_flat"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_marginBottom="0.0dip"
        android:text="ВЫБРАТЬ"
        android:singleLine="true"
        android:layout_toRightOf="@id/prf_edt_ava"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/button_flat_text"
        android:gravity="center"
        android:id="@id/prf_edt_ava_delete"
        android:background="@drawable/button_flat"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:text="УДАЛИТЬ"
        android:singleLine="true"
        android:layout_toRightOf="@id/prf_edt_ava"
        android:layout_below="@id/prf_edt_ava_change"
        android:layout_alignLeft="@id/prf_edt_ava_change"
        android:layout_alignParentRight="true" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_ava_lbl"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_marginTop="8.0dip"
        android:text="размер файла до 32kb и 100x100 пикселей максимум"
        android:layout_below="@id/prf_edt_ava"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="Статус"
        android:layout_below="@id/prf_edt_ava_lbl"
        android:layout_alignParentLeft="true" />
    <EditText
        android:textColor="@color/main_text"
        android:id="@id/prf_edt_title"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:singleLine="true"
        android:layout_below="@id/prf_edt_title_lbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:inputType="textCapSentences" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_sign_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подпись"
        android:layout_below="@id/prf_edt_title"
        android:layout_alignParentLeft="true" />
    <FrameLayout
        android:id="@id/prf_edt_sign_tags"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prf_edt_sign_lbl">
        <include
            layout="@layout/tags_bar" />
    </FrameLayout>
    <EditText
        android:scrollbarStyle="insideInset"
        android:textColor="@color/main_text"
        android:gravity="top"
        android:id="@id/prf_edt_sign"
        android:background="@drawable/edit_text_material"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/prf_edt_sign_tags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:inputType="textCapSentences|textMultiLine"
        android:overScrollMode="always" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_bio_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="О себе"
        android:layout_below="@id/prf_edt_sign"
        android:layout_alignParentLeft="true" />
    <FrameLayout
        android:id="@id/prf_edt_bio_tags"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prf_edt_bio_lbl">
        <include
            layout="@layout/tags_bar" />
    </FrameLayout>
    <EditText
        android:scrollbarStyle="insideInset"
        android:textColor="@color/main_text"
        android:gravity="top"
        android:id="@id/prf_edt_bio"
        android:background="@drawable/edit_text_material"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/prf_edt_bio_tags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:inputType="textCapSentences|textMultiLine"
        android:overScrollMode="always" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_date_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="Дата рождения"
        android:layout_below="@id/prf_edt_bio"
        android:layout_alignParentLeft="true" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/button_flat_text"
        android:gravity="center"
        android:id="@id/prf_edt_date"
        android:background="@drawable/button_flat"
        android:paddingLeft="32.0dip"
        android:paddingRight="32.0dip"
        android:layout_width="180.0dip"
        android:layout_height="36.0dip"
        android:layout_marginTop="8.0dip"
        android:text="123"
        android:singleLine="true"
        android:layout_below="@id/prf_edt_date_lbl" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_gender_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="Пол"
        android:layout_below="@id/prf_edt_date"
        android:layout_alignParentLeft="true" />
    <RadioGroup
        android:orientation="vertical"
        android:id="@id/prf_edt_gender_radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prf_edt_gender_lbl">
        <RadioButton
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:gravity="top"
            android:id="@id/prf_edt_gender_none"
            android:background="@drawable/button_bg"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="16.0dip"
            android:button="@null"
            android:text="не указано"
            android:includeFontPadding="false"
            android:drawableLeft="@drawable/radio_button" />
        <RadioButton
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:gravity="top"
            android:id="@id/prf_edt_gender_male"
            android:background="@drawable/button_bg"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="0.0dip"
            android:button="@null"
            android:text="мужской"
            android:includeFontPadding="false"
            android:drawableLeft="@drawable/radio_button" />
        <RadioButton
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:gravity="top"
            android:id="@id/prf_edt_gender_female"
            android:background="@drawable/button_bg"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginBottom="0.0dip"
            android:button="@null"
            android:text="женский"
            android:includeFontPadding="false"
            android:drawableLeft="@drawable/radio_button" />
    </RadioGroup>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_location_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="Город"
        android:layout_below="@id/prf_edt_gender_radio"
        android:layout_alignParentLeft="true" />
    <EditText
        android:textColor="@color/main_text"
        android:id="@id/prf_edt_location"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/prf_edt_location_lbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:inputType="textCapSentences" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/prf_edt_devices_lbl"
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_marginTop="0.0dip"
        android:text="Устройства"
        android:layout_below="@id/prf_edt_location"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/prf_edt_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prf_edt_devices_lbl" />
    <TextView
        android:textSize="16.0sp"
        android:textStyle="bold"
        android:textColor="@color/btn_text_color"
        android:gravity="center_horizontal"
        android:id="@id/prf_edt_save"
        android:background="@drawable/button_bg"
        android:paddingLeft="16.0dip"
        android:paddingTop="14.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="14.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.0dip"
        android:text="СОХРАНИТЬ ИЗМЕНЕНИЯ"
        android:layout_below="@id/prf_edt_devices" />
</RelativeLayout>