<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Activity_Dark" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/zn_main_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogStyle">@style/Dialog_Dark</item>
        <item name="android:textColor">@color/zn_main_text</item>
    </style>
    <style name="Activity_Light" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/main_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogStyle">@style/Dialog_Light</item>
        <item name="android:textColor">@color/main_text</item>
    </style>
    <style name="Activity_Preload" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Dialog_Dark" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/zn_np_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Dialog_Light" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/np_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ImageViewer" parent="@style/Dialog_Dark">
        <item name="android:windowBackground">@color/zn_image_gallary_bg</item>
        <item name="android:textColor">@color/zn_main_text</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Menu_Dark" parent="@style/Dialog_Dark">
        <item name="android:windowBackground">@drawable/zn_np_menu</item>
        <item name="android:textColor">@color/zn_main_text</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Menu_Light" parent="@style/Dialog_Light">
        <item name="android:windowBackground">@drawable/np_menu</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
