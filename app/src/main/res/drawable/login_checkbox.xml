<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        android:state_pressed="false">
        <layer-list>
            <item
                android:left="0.0dip">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/ic_checkbox_white_on" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="true"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/pressed" />
                </shape>
            </item>
            <item
                android:left="0.0dip">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/ic_checkbox_white_on" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="false"
        android:state_pressed="false">
        <layer-list>
            <item
                android:left="0.0dip">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/ic_checkbox_white_off" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="false"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/pressed" />
                </shape>
            </item>
            <item
                android:left="0.0dip">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/ic_checkbox_white_off" />
            </item>
        </layer-list>
    </item>
</selector>