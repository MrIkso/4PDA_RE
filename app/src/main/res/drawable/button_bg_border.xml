<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:left="-2.0dip"
                android:top="-2.0dip"
                android:right="-2.0dip"
                android:bottom="0.0dip">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@android:color/transparent" />
                    <stroke
                        android:width="1.0dip"
                        android:color="@color/border_line" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid
                        android:color="@color/pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="false">
        <layer-list>
            <item
                android:left="-2.0dip"
                android:top="-2.0dip"
                android:right="-2.0dip"
                android:bottom="0.0dip">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@android:color/transparent" />
                    <stroke
                        android:width="1.0dip"
                        android:color="@color/border_line" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>