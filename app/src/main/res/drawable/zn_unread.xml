<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/zn_pressed" />
                </shape>
            </item>
            <item
                android:left="0.0dip"
                android:top="0.0dip"
                android:right="16.0dip"
                android:bottom="0.0dip">
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/zn_ic_unread" />
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="0.0dip"
                android:top="0.0dip"
                android:right="16.0dip"
                android:bottom="0.0dip">
                <bitmap
                    android:gravity="center|right"
                    android:src="@drawable/zn_ic_unread" />
            </item>
        </layer-list>
    </item>
</selector>