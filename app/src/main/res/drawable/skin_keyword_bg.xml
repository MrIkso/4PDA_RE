<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape>
            <solid
                android:color="@color/skin_keyword_on_bg" />
            <corners
                android:radius="10.0dip" />
            <padding
                android:left="10.0dip"
                android:top="6.0dip"
                android:right="10.0dip"
                android:bottom="6.0dip" />
        </shape>
    </item>
    <item
        android:state_checked="false">
        <shape>
            <solid
                android:color="@color/skin_keyword_off_bg" />
            <corners
                android:radius="10.0dip" />
            <padding
                android:left="10.0dip"
                android:top="6.0dip"
                android:right="10.0dip"
                android:bottom="6.0dip" />
        </shape>
    </item>
</selector>