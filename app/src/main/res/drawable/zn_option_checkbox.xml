<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        android:state_pressed="false">
        <layer-list>
            <item
                android:left="-2.0dip"
                android:top="-2.0dip"
                android:right="-2.0dip"
                android:bottom="0.0dip">
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@android:color/transparent" />
                    <stroke
                        android:width="1.0dip"
                        android:color="@color/zn_border_line" />
                    <padding
                        android:left="16.0dip"
                        android:top="8.0dip"
                        android:right="12.0dip"
                        android:bottom="11.0dip" />
                </shape>
            </item>
            <item
                android:right="0.0dip">
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/zn_ic_checkbox_on" />
            </item>
        </layer-list>
    </item>
