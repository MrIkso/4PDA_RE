        android:id="@id/bbCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="ru.fourpda.client.BBDisplay" />
    <view
        android:id="@id/bbOverlay"
        android:layout_width="0.0dip"
