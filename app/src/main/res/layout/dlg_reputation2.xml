<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:paddingTop="24.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="22.0sp"
            android:textStyle="bold"
            android:textColor="@color/main_text"
            android:id="@id/repTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:layout_marginBottom="20.0dip"
            android:text="@string/dlg_reputation_title" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/label_text_csl"
            android:id="@id/repReasonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:text="@string/dlg_reputation_label"
            android:layout_below="@id/repTitle" />
        <EditText
            android:textColor="@color/main_text"
            android:id="@id/repReason"
            android:background="@drawable/edit_text_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:layout_below="@id/repReasonTitle"
            android:inputType="textCapSentences">
            <requestFocus />
        </EditText>
        <TextView
            android:enabled="false"
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/btn_text_color"
            android:gravity="center"
            android:id="@id/repDown"
            android:background="@drawable/button_bg"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_marginLeft="16.0dip"
            android:text="@string/dlg_reputation_down"
            android:layout_below="@id/repReason"
            android:layout_alignParentLeft="true" />
        <TextView
            android:enabled="false"
            android:textSize="16.0sp"
            android:textStyle="bold"
            android:textColor="@color/btn_text_color"
            android:gravity="center"
            android:id="@id/repUp"
            android:background="@drawable/button_bg"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_marginRight="16.0dip"
            android:text="@string/dlg_reputation_up"
            android:layout_below="@id/repReason"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</ScrollView>