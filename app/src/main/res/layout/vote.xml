<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="0.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:textColor="@color/link_color"
        android:id="@id/voteUser"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="8.0dip"
        android:singleLine="true"
        android:drawablePadding="16.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/voteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/voteWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_below="@id/voteUser"
        android:layout_alignParentLeft="true" />
    <view
        android:id="@id/voteCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voteWhere"
        android:layout_alignParentLeft="true"
        class="ru.fourpda.client.BBDisplay" />
    <view
        android:id="@id/voteOverlay"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_alignLeft="@id/voteCode"
        android:layout_alignTop="@id/voteCode"
        android:layout_alignRight="@id/voteCode"
        android:layout_alignBottom="@id/voteCode"
        class="ru.fourpda.client.BBOverlay" />
</RelativeLayout>