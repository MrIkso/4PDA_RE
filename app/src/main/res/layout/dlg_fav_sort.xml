<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="24.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pda="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:paddingBottom="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_fav_sort_title" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_fav_sort_key_label" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:id="@id/dlg_fav_sort_key"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableRight="@drawable/ic_spinner_drop_down"
        android:drawablePadding="6.0dip" />
    <view
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:gravity="center_vertical"
        android:id="@id/dlg_fav_sort_reverse"
        android:background="@drawable/checkbox_right"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/dlg_fav_sort_reverse"
        android:includeFontPadding="false"
        pda:box_align="right"
        class="ru.fourpda.client.Widgets$CheckboxTextView" />
    <view
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:gravity="center_vertical"
        android:id="@id/dlg_fav_sort_unread_first"
        android:background="@drawable/checkbox_right"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/dlg_fav_sort_unread_first"
        android:includeFontPadding="false"
        pda:box_align="right"
        class="ru.fourpda.client.Widgets$CheckboxTextView" />
</LinearLayout>