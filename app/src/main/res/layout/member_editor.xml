<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/memberLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <view
        android:textColor="@color/main_text"
        android:id="@id/memberEdit"
        android:background="@drawable/edit_text_material"
        android:paddingRight="28.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:popupBackground="@drawable/np_popup"
        android:inputType="textCapSentences"
        android:imeOptions="actionSearch|flagNoExtractUi"
        android:dropDownVerticalOffset="1.0dip"
        class="ru.fourpda.client.Widgets$MemberView" />
    <ImageView
        android:layout_gravity="center|right"
        android:id="@id/memberLink"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4.0dip"
        android:src="@drawable/b_tag_link" />
    <ProgressBar
        android:layout_gravity="center|right"
        android:id="@id/memberProgress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="2.0dip"
        style="?android:progressBarStyleSmall" />
</FrameLayout>