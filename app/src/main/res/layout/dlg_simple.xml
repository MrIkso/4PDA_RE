<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="24.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pda="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:id="@id/promtMessage"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/main_text"
        android:id="@id/promtDescription"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="@color/main_text"
        android:id="@id/promtInput"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="textCapSentences">
        <requestFocus />
    </EditText>
    <view
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:gravity="center_vertical"
        android:id="@id/promtCheck"
        android:background="@drawable/checkbox_right"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:includeFontPadding="false"
        pda:box_align="right"
        class="ru.fourpda.client.Widgets$CheckboxTextView" />
</LinearLayout>