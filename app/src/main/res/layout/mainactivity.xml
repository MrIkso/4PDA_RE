                        android:id="@id/nav_new_qms"
                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip">
                        <TextView
