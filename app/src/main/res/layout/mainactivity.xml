                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginBottom="0.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textColor="@color/main_text"
                            android:gravity="center|left"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="@string/nav_new_fav"
                            android:includeFontPadding="false"
                            android:drawableLeft="@drawable/ic_nav_fav"
                            android:drawablePadding="8.0dip"
                            android:layout_weight="1.0"
                            android:lineSpacingExtra="0.0sp" />
                        <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/unread_text"
                            android:gravity="center"
                            android:id="@id/nav_unread_fav"
                            android:background="@drawable/unread_bg_nav"
                            android:layout_width="36.0dip"
                            android:layout_height="fill_parent"
                            android:text=" "
                            android:singleLine="true"
                            android:lineSpacingExtra="1.0dip" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@id/nav_new_men"
                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="5.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginBottom="0.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textColor="@color/main_text"
                            android:gravity="center|left"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:text="@string/nav_new_men"
                            android:includeFontPadding="false"
                            android:drawableLeft="@drawable/ic_nav_fav"
                            android:drawablePadding="8.0dip"
                            android:layout_weight="1.0"
                            android:lineSpacingExtra="0.0sp" />
                        <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/unread_text"
                            android:gravity="center"
                            android:id="@id/nav_unread_men"
                            android:background="@drawable/unread_bg_nav"
                            android:layout_width="36.0dip"
                            android:layout_height="fill_parent"
                            android:text=" "
                            android:singleLine="true"
                            android:lineSpacingExtra="1.0dip" />
                    </LinearLayout>
                    <TextView
                        android:textSize="12.0sp"
                        android:textColor="@color/label_text_csl"
                        android:gravity="center|left"
                        android:background="@drawable/border_top"
                        android:paddingLeft="16.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginTop="8.0dip"
                        android:text="@string/nav_open_tabs"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0.0sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/nav_bottom"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip">
                    <View
                        android:background="@drawable/border_top"
                        android:layout_width="fill_parent"
                        android:layout_height="8.0dip" />
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@color/main_text"
                        android:gravity="center|left"
                        android:id="@id/nav_options"
                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:text="Настройки"
                        android:includeFontPadding="false"
                        android:drawableLeft="@drawable/ic_nav_options"
                        android:drawablePadding="8.0dip"
                        android:lineSpacingExtra="0.0sp" />
