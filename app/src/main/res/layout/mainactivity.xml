<?xml version="1.0" encoding="utf-8"?>
<view
    android:orientation="vertical"
    android:id="@id/top_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    class="ru.fourpda.client.MainLayout$TopLayout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@id/top_status_spacer"
        android:background="@color/status_bar"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip" />
    <view
        android:id="@id/drawer_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="ru.fourpda.client.MainLayout$DrawerLayout">
        <ru.fourpda.client.MainLayout
            android:id="@id/main_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@id/actionBar"
                android:background="@color/brend"
                android:layout_width="fill_parent"
                android:layout_height="42.0dip">
                <View
                    android:id="@id/bar_panel"
                    android:background="@drawable/bar_nav"
                    android:clickable="true"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/bar_panel" />
                <FrameLayout
                    android:id="@id/bar_caption"
                    android:background="@drawable/button_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="42.0dip"
                    android:layout_toLeftOf="@id/bar_up"
                    android:layout_toRightOf="@id/bar_panel"
                    android:layout_alignParentTop="true">
                    <View
                        android:id="@id/bar_logo"
                        android:background="@drawable/bar_logo"
                        android:visibility="gone"
                        android:layout_width="110.0dip"
                        android:layout_height="42.0dip" />
                    <TextView
                        android:textSize="12.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/alter_text"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@id/bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="42.0dip"
                        android:maxLines="2"
                        android:drawableRight="@drawable/ic_drop_down"
                        android:drawablePadding="6.0dip" />
                </FrameLayout>
                <View
                    android:id="@id/bar_up"
                    android:background="@drawable/bar_up"
                    android:clickable="true"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_toLeftOf="@id/bar_search"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/bar_up" />
                <View
                    android:id="@id/bar_search"
                    android:background="@drawable/bar_search"
                    android:clickable="true"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_toLeftOf="@id/bar_menu"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/bar_search" />
                <View
                    android:id="@id/bar_menu"
                    android:background="@drawable/bar_menu"
                    android:clickable="true"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/bar_menu" />
            </RelativeLayout>
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/main_text"
                android:id="@id/loadingText"
                android:background="@color/business_bg"
                android:paddingLeft="20.0dip"
                android:paddingTop="1.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="4.0dip"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/load_default" />
            <view
                android:id="@id/prev"
                android:visibility="gone"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/ic_prev"
                android:scaleType="centerInside"
                class="ru.fourpda.client.Widgets$CircleImageView" />
            <view
                android:id="@id/next"
                android:visibility="gone"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/ic_next"
                android:scaleType="centerInside"
                class="ru.fourpda.client.Widgets$CircleImageView" />
            <view
                android:id="@id/fling"
                android:layout_width="0.0dip"
                android:layout_height="0.0dip"
                android:src="@drawable/ic_next"
                android:scaleType="centerInside"
                pda:radius="30"
                class="ru.fourpda.client.Widgets$CircleImageView"
                xmlns:pda="http://schemas.android.com/apk/res-auto" />
        </ru.fourpda.client.MainLayout>
        <ScrollView
