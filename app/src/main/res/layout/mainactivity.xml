                        android:textSize="16.0sp"
                        android:textColor="@color/main_text"
                        android:gravity="center|left"
                        android:id="@id/nav_about"
                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:text="О программе"
                        android:includeFontPadding="false"
                        android:drawableLeft="@drawable/ic_nav_about"
                        android:drawablePadding="8.0dip"
                        android:lineSpacingExtra="0.0sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/nav_user_menu"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip">
                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="@color/main_text"
                        android:gravity="center|left"
                        android:id="@id/nav_user_profile"
                        android:background="@drawable/nav_item"
                        android:paddingLeft="8.0dip"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:text="Профиль"
                        android:includeFontPadding="false"
                        android:drawableLeft="@drawable/ic_nav_profile"
                        android:drawablePadding="8.0dip"
                        android:lineSpacingExtra="0.0sp" />
