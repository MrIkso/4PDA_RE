                        android:layout_height="70.0dip"
                        android:src="@drawable/ic_avatar"
                        android:scaleType="fitStart"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/nav_ava"
