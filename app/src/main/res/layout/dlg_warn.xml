<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="24.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pda="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        android:paddingBottom="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_title" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_level_label" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:id="@id/dlg_warn_level"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableRight="@drawable/ic_spinner_drop_down"
        android:drawablePadding="6.0dip" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_template_label" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:id="@id/dlg_warn_template"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableRight="@drawable/ic_spinner_drop_down"
        android:drawablePadding="6.0dip" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/dlg_warn_premod_label"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_premod_label" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/dlg_warn_premod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:id="@id/dlg_warn_premod_time"
            android:background="@drawable/edit_text_material"
            android:layout_width="100.0sp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:id="@id/dlg_warn_premod_unit"
            android:background="@drawable/edit_text_material"
            android:layout_width="100.0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_spinner_drop_down"
            android:drawablePadding="6.0dip" />
        <view
            android:textSize="16.0sp"
            android:textColor="@color/main_text"
            android:gravity="center|left"
            android:id="@id/dlg_warn_premod_always"
            android:background="@drawable/checkbox_left"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="42.0dip"
            android:layout_marginLeft="6.0dip"
            android:text="@string/dlg_warn_premod_always"
            pda:box_align="left"
            class="ru.fourpda.client.Widgets$CheckboxTextView" />
    </LinearLayout>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/dlg_warn_ro_label"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_ro_label" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/dlg_warn_ro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:id="@id/dlg_warn_ro_time"
            android:background="@drawable/edit_text_material"
            android:layout_width="100.0sp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number" />
        <TextView
            android:textSize="18.0sp"
            android:textColor="@color/main_text"
            android:id="@id/dlg_warn_ro_unit"
            android:background="@drawable/edit_text_material"
            android:layout_width="100.0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_spinner_drop_down"
            android:drawablePadding="6.0dip" />
    </LinearLayout>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/dlg_warn_ban_label"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_ban_label" />
    <TextView
        android:textSize="18.0sp"
        android:textColor="@color/main_text"
        android:id="@id/dlg_warn_ban"
        android:background="@drawable/edit_text_material"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawableRight="@drawable/ic_spinner_drop_down"
        android:drawablePadding="6.0dip" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_other_label" />
    <view
        android:textSize="16.0sp"
        android:textColor="@color/main_text"
        android:gravity="center|left"
        android:id="@id/dlg_warn_delete"
        android:background="@drawable/checkbox_left"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="42.0dip"
        android:text="@string/dlg_warn_delete"
        pda:box_align="left"
        class="ru.fourpda.client.Widgets$CheckboxTextView" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_reason_label" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/dlg_warn_reason"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/bb_editor" />
    </LinearLayout>
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/label_text_csl"
        android:paddingTop="16.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dlg_warn_message_label" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/dlg_warn_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/bb_editor" />
    </LinearLayout>
</LinearLayout>