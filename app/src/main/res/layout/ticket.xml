<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingBottom="13.0dip"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/link_color"
        android:id="@id/ticket_title"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/ticket_forum"
        android:paddingTop="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_below="@id/ticket_title" />
    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/ticket_date"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignLeft="@id/ticket_title"
        android:layout_alignBottom="@id/ticket_member" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/label_text_csl"
        android:id="@id/ticket_member"
        android:paddingTop="5.0dip"
        android:paddingBottom="3.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="1.0dip"
        android:layout_toLeftOf="@id/ticket_handler"
        android:layout_toRightOf="@id/ticket_date"
        android:layout_below="@id/ticket_forum" />
    <TextView
        android:textSize="14.0sp"
        android:textColor="@color/link_color"
        android:id="@id/ticket_handler"
        android:background="@color/red"
        android:paddingLeft="10.0dip"
        android:paddingTop="3.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="3.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.0dip"
        android:text="test test"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="1.0dip"
        android:layout_alignBottom="@id/ticket_member"
        android:layout_alignParentRight="true" />
</RelativeLayout>